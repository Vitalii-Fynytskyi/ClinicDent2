<Window x:Class="ClinicDent2.WindowEnterMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClinicDent2"
        mc:Ignorable="d"
        Title="Введіть текст" Height="150" Width="800">
    <StackPanel>
        <TextBox x:Name="textBoxMessage"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="buttonConfirm" Content="Ок" Click="buttonConfirm_Click"/>
            <Button x:Name="buttonCancel" Content="Відміна" Margin="5,0,0,0" Click="buttonCancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
