<Window x:Class="ClinicDent2.FullSizeImageControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClinicDent2"
        mc:Ignorable="d"
        Title="ImageViewer" Height="450" Width="800" Topmost="True" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen" WindowState="Normal" ResizeMode="NoResize" KeyDown="fullSizeImageControl_KeyDown">
    <Grid x:Name="grid" VerticalAlignment="Center" Background="#88000000" MouseLeftButtonDown="Grid_MouseLeftButtonDown" MouseWheel="grid_MouseWheel" MouseRightButtonDown="grid_MouseRightButtonDown" MouseMove="grid_MouseMove" MouseRightButtonUp="grid_MouseRightButtonUp">
        <DockPanel>
            <Border x:Name="border" DockPanel.Dock="Top">
                <Image x:Name="imageControl"/>
            </Border>
        </DockPanel>
    </Grid>
</Window>
